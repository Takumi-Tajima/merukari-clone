= simple_form_for([:seller_users, product]) do |f|
  = f.input :category_id, collection: Category.for_select, prompt: 'カテゴリーを選択してください'
  = f.input :name
  = f.input :description
  = f.input :price
  = f.input :image, as: :file, input_html: { accept: 'image/png, image/jpeg, image/jpg' }
  = f.button :submit, class: 'btn-primary'
